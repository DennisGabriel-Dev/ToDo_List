<body class="tasks__index__scope">
<!--BOOTSTRAP LINK-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

<div class="p-3 mb-0 text-white">
  <p style="color: #2e8b57"><%= notice %></p>
    <% if current_user %>
    <header class="header__index__tasks">
      <h1 class="title__index__tasks">Tasks</h1>
      <%= button_to "logout", destroy_user_session_path, method: :delete %>
    </header>
    <div class="btn btn-danger btn-lg text-white new__task">
      <%= link_to "Nova task", new_task_path, :class => "link__new__task"%>
    </div>

    <div id="tasks">
      <% @tasks.each do |task| %>
        <%= render task %>
        <div class="content__task">
          <div class="text-white item__task">
            <%= link_to "Mostrar a task", task ,  :class => "link__show__task btn btn-success"%>
          </div>
          <div class="item__task">
            <%= button_to '🗑️', task, method: :delete %>
          </div>
          <div class="item__task">
            <%= link_to '🖋️', task,  method: :edit %>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
</div>
</body>