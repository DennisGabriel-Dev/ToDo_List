<!--BOOTSTRAP LINK-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

<div class="p-3 mb-2 bg-secondary text-white tasks__index__scope">
  <p style="color: green"><%= notice %></p>
    <% if current_user %>
    <h1 class="title__index__tasks">Tasks</h1>

    <div class="btn btn-danger btn-lg text-white new__task">
      <%= link_to "Nova task", new_task_path, :class => "link__new__task"%>
    </div>

    <div id="tasks">
      <% @tasks.each do |task| %>
        <%= render task  %>
        <p>
         <div class="btn btn-success btn-lg text-white">
          <%= link_to "Mostrar a task", task ,  :class => "link__show__task"%>
         </div>
          <%= button_to '🗑️', task, method: :delete, class: "delete__button" %>
          <%= link_to '🖋️', task,  method: :edit %> 
        </p>
      <% end %>
    </div>

    <%= button_to "logout", destroy_user_session_path, method: :delete %>
    <% end %>
</div>